{
    "name": "dn_hierarchicalsearch",
    "version": "1.2.2-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-hierarchical-search",
    "dependencies": {
        "apprt-vue": "^4.2.2",
        "apprt-binding": "^4.2.2",
        "apprt-vuetify": "^4.2.2",
        "resultcenter": "^4.2.2",
        "agssearch": "^4.2.2"
    },
    "layout-widgets": [
        {
            "widgetRole": "hierarchicalSearchWidget",
            "template": "seasons",
            "sublayout": [
                "desktop",
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "autofocus": false,
                "dockTool": "hierarchicalSearchToggleTool",
                "closable": true,
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 400,
                    "h": 140
                },
                "minSize": {
                    "w": 400,
                    "h": 140
                },
                "windowClass": "noPadding"
            }
        },
        {
            "widgetRole": "hierarchicalSearchWidget",
            "template": "seasons",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "autofocus": false,
                "dockTool": "hierarchicalSearchToggleTool",
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "50%",
                    "b": 40,
                    "l": 0
                },
                "windowClass": "mobileWindow noPadding"
            }
        }
    ],
    "components": [
        {
            "name": "HierarchicalSearchWidgetFactory",
            "provides": "dijit.Widget",
            "instanceFactory": true,

            "properties": {
                "widgetRole":"hierarchicalSearchWidget"
            },
            "references": [
                {
                    "name": "hierarchicalSearchVueWidget",
                    "providing": "dn_hierarchicalsearch.HierarchicalSearchVueWidget"
                }
            ]
        },
        {
            "name": "HierarchicalSearchController",
            "provides": [
                "ct.framework.api.EventHandler",
                "dn_hierarchicalsearch.HierarchicalSearchController"
            ],
            "properties": {
                "storeId": "storeId",
                "resultHandling":[]

            },
            "references": [
                {
                    "name": "hierarchicalSearchVueWidget",
                    "providing": "dn_hierarchicalsearch.HierarchicalSearchVueWidget"
                },
                {
                    "name": "resultAction",
                    "providing": "dn_hierarchicalsearch.Resultaction",
                    "cardinality": "0..n"
                },
                {
                    "name": "_store",
                    "providing": "ct.api.Store",
                    "filter": "(id={storeId})"
                },
                {
                    "name": "_logService",
                    "providing": "ct.framework.api.LogService"
                }
            ]
        },
        {
            "name": "HierarchicalSearchVueWidgetFactory",
            "instanceFactory": true,
            "properties": {
                "fields": []
            },
            "provides": [
                "dn_hierarchicalsearch.HierarchicalSearchVueWidget"
            ]
        },
        {
            "name": "HierarchicalSearchToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "hierarchicalSearchToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "toolRole": "toolset",
                "iconClass": "icon-magnifier",
                "togglable": true
            }
        },
        {
            "name": "ZoomToResultAction",
            "provides": [
                "dn_hierarchicalsearch.Resultaction"
            ],
            "properties": {
                "id": "zoomToResult"
            },
            "references":[
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "OpenPopupAction",
            "provides": [
                "dn_hierarchicalsearch.Resultaction"
            ],
            "properties": {
                "id": "openPopup"
            },
            "references":[
                {
                    "name": "_openPopupService",
                    "providing": "resultcenter.OpenPopupService"
                }
            ]
        },
        {
            "name": "SendResultToResultcenterAction",
            "provides": [
                "dn_hierarchicalsearch.Resultaction"
            ],
            "properties": {
                "id":"sendResultToResultcenter"
            },
            "references": [
                {
                    "name": "_dataModel",
                    "providing": "resultcenter.DataModel"
                }
            ]
        }
    ]
}
